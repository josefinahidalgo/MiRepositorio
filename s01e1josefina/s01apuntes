/*
estructura de un programa básico de Processing
*/

//variables globales

int x;
int y;
int t;

void setup (){
  size(600,600);
  x = 10;
  y = 20;
  t = 20;
}

void draw () {
  background (51);
  ellipse (x,y,t,t)
  x += 10; //el ++ es 1 numero mas

  //cuando la pelota llegue al borde derecho;
  if (x > width) {
    x = 0; // aparezca en el izquierdo
  }
}


// Clase parte 2
